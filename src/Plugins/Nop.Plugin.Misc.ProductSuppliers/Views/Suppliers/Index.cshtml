@model Nop.Plugin.Misc.ProductSuppliers.Models.ProductSupplierSearchModel
@{
	ViewBag.Title = "Product Suppliers";
	Layout = "_AdminLayout"; // Use nopCommerce admin layout
}

<div class="content-header clearfix">
	<h1 class="float-left">Product Suppliers</h1>
	<div class="float-right">
		<a asp-action="Create" class="btn btn-primary">
			<i class="fas fa-plus-square"></i> Add new
		</a>
	</div>
</div>

<div class="content">
	<div class="card card-default">
		<div class="card-header with-border">
			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
			<h3 class="card-title"> <i class="fas fa-search"></i> Search</h3>
		</div>
		<div class="card-body">
			<form asp-controller="ProductSuppliers" asp-action="Index" method="get" class="mb-4">
				<!-- Search fields -->
				<div class="row">
					<div class="col-md-6">
						<div class="form-group row">
							<div class="col-md-4">
								<div class="label-wrapper d-flex align-items-center">
									<label class="col-form-label mr-2 mb-0" for="SearchName">Supplier name</label>
									<div class="ico-help" title="Search by supplier name" data-toggle="tooltip">
										<i class="fas fa-question-circle"></i>
									</div>
								</div>
							</div>
							<div class="col-md-8">
								<input class="form-control text-box single-line" id="SearchName" name="Name" type="text" value="@Model.Name">
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group row">
							<div class="col-md-4">
								<div class="label-wrapper d-flex align-items-center">
									<label class="col-form-label mr-2 mb-0" for="SearchEmail">Supplier Email</label>
									<div class="ico-help" title="Search by supplier email" data-toggle="tooltip">
										<i class="fas fa-question-circle"></i>
									</div>
								</div>
							</div>
							<div class="col-md-8">
								<input class="form-control text-box single-line" id="SearchEmail" name="Email" type="text" value="@Model.Email">
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="text-center col-12">
						<button type="submit" id="search-suppliers" class="btn btn-primary btn-search">
							<i class="fas fa-search"></i> Search
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div class="card card-default">
		<div class="card-body">
			<div class="documentation-reference">
				<span>Learn more about <a href="#" target="_blank">supplier management</a></span>
			</div>

			@if (Model.Suppliers == null || !Model.Suppliers.Any())
			{
				<div class="alert alert-info">
					No suppliers found.
				</div>
			}
			else
			{
				<div id="suppliers-grid" class="mt-3">
					<table class="table table-bordered table-striped table-hover">
						<thead>
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th>Phone</th>
								<th>Website</th>
								@* <th>Active</th> *@
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var supplier in Model.Suppliers)
							{
								<tr>
									<td>@supplier.Name</td>
									<td>@supplier.Email</td>
									<td>@supplier.Phone</td>
									<td>
										@if (!string.IsNullOrEmpty(supplier.Website))
										{
											<a href="@supplier.Website" target="_blank">@supplier.Website</a>
										}
										else
										{
											<span>-</span>
										}
									</td>
									@* <td> *@
									@* 	@if (supplier.Active) *@
									@* 	{ *@
									@* 		<i class="fas fa-check true-icon"></i> *@
									@* 	} *@
									@* 	else *@
									@* 	{ *@
									@* 		<i class="fas fa-times false-icon"></i> *@
									@* 	} *@
									@* </td> *@
									<td>
										<div class="btn-group">
											<a class="btn btn-default" asp-action="Edit" asp-route-id="@supplier.Id">
												<i class="fas fa-pencil-alt mr-1"></i>
												Edit
											</a>
												
											<form asp-action="Delete" asp-route-id="@supplier.Id" method="post" class="d-inline">
												<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
											</form>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

				<div class="row mt-3">
					<div class="col-md-3">
						<div class="d-flex align-items-center">
							<ul class="pagination mb-0">
								<li class="paginate_button page-item previous disabled">
									<a href="#" class="page-link">Previous</a>
								</li>
								<li class="paginate_button page-item active">
									<a href="#" class="page-link">1</a>
								</li>
								<li class="paginate_button page-item next disabled">
									<a href="#" class="page-link">Next</a>
								</li>
							</ul>
						</div>
					</div>
					<div class="col-md-5">
						<div class="d-flex align-items-center">
							<span class="mr-2">Show</span>
							<select class="custom-select custom-select-sm form-control mr-2" style="width: auto;">
								<option value="10">10</option>
								<option value="15" selected>15</option>
								<option value="20">20</option>
								<option value="50">50</option>
								<option value="100">100</option>
							</select>
							<span>items</span>
						</div>
					</div>
					<div class="col-md-3">
						<div class="d-flex align-items-center justify-content-end">
							<div class="dataTables_info mr-2">
								1-@(Model.Suppliers.Count()) of @(Model.Suppliers.Count()) items
							</div>
							<button type="button" class="btn btn-light btn-sm btn-refresh">
								<i class="fas fa-sync-alt"></i>
							</button>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>