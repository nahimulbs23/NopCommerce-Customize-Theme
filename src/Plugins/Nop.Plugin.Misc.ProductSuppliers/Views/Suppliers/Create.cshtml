@model Nop.Plugin.Misc.ProductSuppliers.Domains.ProductSupplier
@{
	Layout = "_AdminLayout";
	ViewBag.Title = "Add a new product supplier";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div class="content-header clearfix">
		<div>
			<h2 class="float-left">Add a new product supplier</h2>
			<a asp-action="Index" class="btn btn-info">
					<i class="far fa-arrow-alt-circle-left"></i> back to supplier list
			</a>
		</div>
		<div class="float-right">
			<button type="submit" name="save" class="btn btn-primary">
				<i class="far fa-save"></i> Save
			</button>
			<button type="submit" name="save-continue" class="btn btn-primary">
				<i class="far fa-save"></i> Save and Continue Edit
			</button>
		</div>
	</div>

	<div class="content">
		<div class="form-horizontal">
			<div class="cards-group">
				<!-- Toggle switch for Basic/Advanced mode -->
				<div class="card-header with-border clearfix">
					<div class="card-title">
						<label class="onoffswitch-title">
							<span class="switch-item-left">Basic</span>
							<input type="checkbox" id="advanced-settings-mode" class="onoffswitch-checkbox">
							<span class="onoffswitch-switch"></span>
							<span class="switch-item-right">Advanced</span>
						</label>
					</div>
				</div>

				<div class="card card-default">
					<!-- Supplier Info Panel -->
					<div class="card-header with-border">
						<div class="card-title">
							<i class="fas fa-info-circle"></i> Supplier Info
						</div>
						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse">
								<i class="fas fa-minus"></i>
							</button>
						</div>
					</div>
					<div class="card-body">
						<!-- BASIC MODE FIELDS -->
						<div class="form-group row">
							<div class="col-md-3">
								<div class="label-wrapper d-flex align-items-center">
									<label asp-for="Name" class="col-form-label mr-2 mb-0">
										Name
									</label>
									<div class="ico-help" title="The name of the supplier." data-toggle="tooltip">
										<i class="fas fa-question-circle"></i>
									</div>
								</div>
							</div>
							<div class="col-md-9">
								<input asp-for="Name" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group row">
							<div class="col-md-3">
								<div class="label-wrapper d-flex align-items-center">
									<label asp-for="Email" class="col-form-label mr-2 mb-0">
										Email
									</label>
									<div class="ico-help" title="The email address of the supplier." data-toggle="tooltip">
										<i class="fas fa-question-circle"></i>
									</div>
								</div>
							</div>
							<div class="col-md-9">
								<input asp-for="Email" class="form-control" />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group row">
							<div class="col-md-3">
								<div class="label-wrapper d-flex align-items-center">
									<label asp-for="Description" class="col-form-label mr-2 mb-0">
										Description
									</label>
									<div class="ico-help" title="The description of the supplier." data-toggle="tooltip">
										<i class="fas fa-question-circle"></i>
									</div>
								</div>
							</div>
							<div class="col-md-9">
								<textarea asp-for="Description" class="form-control" rows="4"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group row">
							<div class="col-md-3">
								<div class="label-wrapper d-flex align-items-center">
									<label asp-for="Phone" class="col-form-label mr-2 mb-0">
										Phone
									</label>
									<div class="ico-help" title="The phone number of the supplier." data-toggle="tooltip">
										<i class="fas fa-question-circle"></i>
									</div>
								</div>
							</div>
							<div class="col-md-9">
								<input asp-for="Phone" class="form-control" />
								<span asp-validation-for="Phone" class="text-danger"></span>
							</div>
						</div>

						@* <div class="form-group row"> *@
						@* 	<div class="col-md-3"> *@
						@* 		<div class="label-wrapper d-flex align-items-center"> *@
						@* 			<label asp-for="Active" class="col-form-label mr-2 mb-0"> *@
						@* 				Active *@
						@* 			</label> *@
						@* 			<div class="ico-help" title="Determines whether this supplier is active." data-toggle="tooltip"> *@
						@* 				<i class="fas fa-question-circle"></i> *@
						@* 			</div> *@
						@* 		</div> *@
						@* 	</div> *@
						@* 	<div class="col-md-9"> *@
						@* 		<input asp-for="Active" type="checkbox" /> *@
						@* 		<span asp-validation-for="Active" class="text-danger"></span> *@
						@* 	</div> *@
						@* </div> *@

						<!-- ADVANCED MODE FIELDS -->
						<div class="advanced-mode" style="display: none;">
							<div class="form-group row">
								<div class="col-md-3">
									<div class="label-wrapper d-flex align-items-center">
										<label asp-for="Address" class="col-form-label mr-2 mb-0">
											Address
										</label>
										<div class="ico-help" title="The address of the supplier." data-toggle="tooltip">
											<i class="fas fa-question-circle"></i>
										</div>
									</div>
								</div>
								<div class="col-md-9">
									<textarea asp-for="Address" class="form-control" rows="3"></textarea>
								</div>
							</div>

							

							<div class="form-group row">
								<div class="col-md-3">
									<div class="label-wrapper d-flex align-items-center">
										<label asp-for="Website" class="col-form-label mr-2 mb-0">
											Website
										</label>
										<div class="ico-help" title="The website URL of the supplier." data-toggle="tooltip">
											<i class="fas fa-question-circle"></i>
										</div>
									</div>
								</div>
								<div class="col-md-9">
									<input asp-for="Website" class="form-control" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

<script>
	$(document).ready(function() {
		// Toggle between basic and advanced modes
		$('#advanced-settings-mode').change(function() {
			if ($(this).is(':checked')) {
				$('.advanced-mode').show();
			} else {
				$('.advanced-mode').hide();
			}
		});

		// Initialize tooltips
		$('[data-toggle="tooltip"]').tooltip();
	});
</script>

<style>
	.onoffswitch-title {
		position: relative;
		display: inline-block;
		cursor: pointer;
	}

	.onoffswitch-checkbox {
		display: none;
	}

	.onoffswitch-switch {
		display: inline-block;
		width: 30px;
		height: 17px;
		background-color: #ccc;
		border-radius: 17px;
		position: relative;
		top: 3px;
		margin: 0 8px;
		transition: background-color 0.3s;
	}

	.onoffswitch-checkbox:checked + .onoffswitch-switch {
		background-color: #1e88e5;
	}

	.onoffswitch-switch:before {
		content: '';
		position: absolute;
		width: 13px;
		height: 13px;
		border-radius: 50%;
		background-color: white;
		top: 2px;
		left: 2px;
		transition: transform 0.3s;
	}

	.onoffswitch-checkbox:checked + .onoffswitch-switch:before {
		transform: translateX(13px);
	}

	.switch-item-left, .switch-item-right {
		font-size: 14px;
		font-weight: bold;
	}

	.upload-box {
		border: 2px dashed #ddd;
		border-radius: 4px;
		padding: 20px;
		text-align: center;
		background-color: #f9f9f9;
	}

	.upload-placeholder {
		color: #777;
		cursor: pointer;
		display: block;
		padding: 20px;
	}
</style>